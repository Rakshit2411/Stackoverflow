@model System.Collections.Generic.List<Stackoverflow.Models.Question>

@{
    ViewBag.Title = "Questions";
}

<h2>Questions</h2>

<button class="question" type="button"><p class="link"> @Html.ActionLink("Ask Question", "Create", null, new { style = "color: white;text-decoration:none" }) </p></button>
<table class="table">
    <tr>
        <th style="width:20%">
        </th>
        <th style="width:50%">
            Question Title
        </th>
        <th style="width:30%">
            Question by
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="padding: 20px;text-align:center">
                <div>
                    <div>
                        Votes
                    </div>
                    <div>
                        @Html.DisplayFor(modelItem => item.Votes)
                    </div>
                </div>
                <div>
                    <div>
                        Answers
                    </div>
                    <div>
                        @Html.DisplayFor(modelItem => item.Answers.Count)
                    </div>
                </div>
            </td>
            <td>
                <b>@Html.ActionLink(item.Title, "Details", new { id = item.Id }, new { style = "color:black;text-decoration:none" })</b>
                <div class="taglist">
                    @if (item.Tags != null)
                    {
                        foreach (var qt in item.Tags)
                        {
                            <div class="tag">@Html.ActionLink(qt.Tag.Name, "ShowQuestions", new { id = qt.TagId }, new { style = "color:black;text-decoration:none" })</div>
                        }
                    }
                </div>
            </td>
            <td>
                <b>Date and time: </b>@Html.DisplayFor(modelItem => item.Timeposted)
                <br />
                <br />
                <b>User: </b>@Html.DisplayFor(modelItem => item.ApplicationUser.Email)
            </td>
        </tr>
    }

</table>

<button class="question" type="button">
    <p class="link">
        @Html.ActionLink("Back to Question List", "Index", "Questions", null, new { style = "color: white;text-decoration:none" })
    </p>
</button>


